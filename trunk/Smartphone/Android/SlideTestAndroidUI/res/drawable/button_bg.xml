<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/button_bg_start"/>
			<gradient 
			    android:centerColor="@color/button_bg_mid" 
			    android:endColor="@color/button_bg_end" 
			    android:startColor="@color/button_bg_mid"/>
			<corners android:radius="3dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient 
			    android:startColor="@color/button_bg_start" 
			    android:endColor="@color/button_bg_end" 
			    android:angle="270"/>
			<stroke android:width="1dp" android:color="@color/button_bg_end"/>
			<corners android:radius="3dp"/>
		</shape>
	</item>
</selector>